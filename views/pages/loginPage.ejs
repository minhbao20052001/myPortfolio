<main class="main">
    <div class="login_form main_form">
        <div class="alert" role="alert">
        </div>
        <h2 class="heading-secondary">Log into your account</h2>
        <div class="form form--login">
            <div class="form__group">
                <label class="form__label" for="email">Email address</label>
                <input type="email" id="email" class="form__input" placeholder="example@gmail.com" required>
            </div>
            <div class="form__group">
                <label class="form__label" for="password">Password</label>
                <input type="password" id="password" class="form__input" placeholder="*********" required>
            </div>
            <div class="form__group">
                <button id="submit" class="btn btn--green">Login</button>
            </div>
        </div>
    </div>
</main>